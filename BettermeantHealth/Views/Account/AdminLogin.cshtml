
@{
    ViewBag.Title = "AdminLogin";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}
<div class="container-fluid body-background">
    <div class="body-margin col-md-offset-5">
        <div class="top-heading">
            <h2 class="physician_search">Admin Log-in</h2><br /><br />
            <form class="first-login-form" action="~/Account/Login" id="frmLogin" method="post">
                <input type="hidden" name="ddlRoles" value="1" />
                <div class="form-group row">
                    <label for="txtUserName" class="col-sm-3 col-form-label" style="color: black;">Email:</label><br /><br />
                    <div class="col-sm-9">
                        <input type="text" class="form-control" required data-required-msg="Please enter user name" id="txtUserName" name="txtUserName" validationmessage="Please enter valid user name" style="width:280px">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="txtPassword" class="col-sm-3 col-form-label" style="color: black;">Password:</label><br /> <br />
                    <div class="col-sm-8">
                        <input type="password" class="form-control" required data-required-msg="Please enter password" id="txtPassword" name="txtPassword" placeholder="Password" style="width:280px">
                    </div>
                </div>
                <div class="form-group row">
                    @*<div class="col-md-9">
                            <a href='#' data-toggle="modal" data-target="#PasswordModal" class="pull-right col-md-offset-7" style="color: white;">Forgot password?</a>
                        </div>*@
                    <div class="col-md-4" style="padding-left: 38px;">
                        <input type="submit" id="btnLogin" name="btnLogin" value="Login" class="btn btn-primary col-md-6" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>




